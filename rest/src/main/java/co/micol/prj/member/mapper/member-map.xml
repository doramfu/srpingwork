<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.micol.prj.member.service.MemberMapper">
	<select id="memberSelectAll" resultType="co.micol.prj.member.service.MemberVO">
		SELECT * FROM MEMBER
	</select>
	<select id="memberSelectOne" resultType="co.micol.prj.member.service.MemberVO" parameterType="co.micol.prj.member.service.MemberVO">
		SELECT * FROM MEMBER
		WHERE ID = #{id}
	</select>
	<insert id="memberInsert" parameterType="co.micol.prj.member.service.MemberVO">
		INSERT INTO MEMBER(ID,PASSWORD,NAME,TEL,ADDRESS)
		VALUES(#{id},
			   #{password},
			   #{name},
			   #{tel},
			   #{address})
	</insert>
	<update id="memberUpdate" parameterType="co.micol.prj.member.service.MemberVO">
		UPDATE MEMBER
      <set>
         <if test="password != null">PASSWORD = #{password},</if>
         <if test="tel != null">TEL = #{tel},</if>
         <if test="address != null">ADDRESS = #{address},</if>
      </set>
      WHERE ID = #{id}
	</update>
	<delete id="memberDelete" parameterType="co.micol.prj.member.service.MemberVO">
		DELETE FROM MEMBER
		WHERE ID = #{id}
	</delete>
</mapper>